          LabelColSpan="8"
          WrapperColSpan="16">
        <FormItem Label="礼物名称">
            <Input @bind-Value="@context.Name" Placeholder="礼物名称"/>
        </FormItem>
        <FormItem  Label="描述">
            <TextArea @bind-Value="@context.Description" Placeholder="描述" />
        </FormItem>
        <FormItem  Label="价格">
            <Input @bind-Value="@context.Price" Placeholder="价格" />
        </FormItem>
    </Form>
        <Popconfirm Title="Are you sure delete this task?"
                    OkText="Yes"
                    CancelText="No">
